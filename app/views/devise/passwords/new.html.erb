<% content_for(:auth_header) do %>
  <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Forgot your password?</h2>
  <p class="mt-2 text-center text-sm text-gray-600">
    Enter your email address and we will send you a link to reset your password.
  </p>
<% end %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-6">
    <%= f.label :email, class: label_class %>
    <div class="mt-1">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: input_class %>
    </div>
  </div>

  <div>
    <%= f.submit "Send me reset password instructions", class: form_button_class %>
  </div>

  <div class="mt-4 text-center text-sm text-gray-600">
    Return to
    <%= link_to "Log in", new_session_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
  </div>
<% end %>
