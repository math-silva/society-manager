<% content_for(:auth_header) do %>
  <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Change Password</h2>
<% end %>


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="mb-6">
    <%= f.label :password, "New password", class: label_class %>
    <div class="mt-1">
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: input_class %>
    </div>
    <% if @minimum_password_length %>
      <em class="mt-1 text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

  <div class="mb-6">
    <%= f.label :password_confirmation, "Confirm new password", class: label_class %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: input_class %>
  </div>

  <div>
    <%= f.submit "Change my password", class: form_button_class %>
  </div>
<% end %>
